 <div class='row'>
    <div class='col-8'>
      <h2>ユーザー情報</h2>
        <table class='table'>
          <tr><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "noimage.jpeg") %></tr>
          <tr>
        	  <th>名前</th>
        	  <th><%= @user.name %></th>
          </tr>
          <tr>
        	  <th>紹介文</th>
        	  <th><%= @user.introduction %></th>
        	</tr>
        </table>
        <% if current_user != user %>
          <% if current_user.following?(@user) %>
            <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete %>
          <% else %>
            <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST %>
          <% end %>
        <% end %>
    </div>
  </div>