<div class="row">
  <div class="col-8">
    <% @post.each do |post| %>
<div>
  <%= attachment_image_tag post_image, :image %>
  <p>投稿画像：<%= image_tag('noimage.jpeg') %></p>
  <p>タイトル：<%= post.title %></p>
  <p>説明：<%= post.introduction %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
</div>
<% end %>
  </div>
</div>